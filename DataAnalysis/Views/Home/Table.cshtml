                        '运行时长': "55h",
                        '开模次数':1252,
                        '设备状态': 1,
                        '备注':"xxxxxx"
                    },
                    {
                        'id':2,
                        '设备编码': "WE00002",
                        '设备类型': "机械设备",
                        '所属': "宁波XX机械有限公司",
                        '设备名称': "设备2",
                        '开模次数': 586,
                        '运行时长': "27h",
                        '设备状态': 2,
                        '备注': "xxxxxx"
                    },
                    {
                        'id': 3,
                        '设备编码': "WE00003",
                        '设备类型': "机械设备",
                        '所属': "宁波XX机械有限公司",
                        '设备名称': "设备3",
                        '开模次数': 586,
                        '运行时长': "27h",
                        '设备状态': 3,
                        '备注': "xxxxxx"
                    }
                ]
                })
        })
    </script>
}

